<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_start">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/on_leave_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/gray5"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/margin_start"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/on_break"
                    android:textColor="@color/yellowish_card"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginEnd="@dimen/margin_start"
                    android:src="@drawable/ic_google_meet"
                    app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />

                <TextView
                    android:id="@+id/name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_start"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/name_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_start"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_toEndOf="@+id/name_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_start"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_9ssp"
                    android:visibility="visible" />


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignStart="@+id/status"
                    android:layout_alignTop="@+id/status"
                    android:layout_alignBottom="@id/status"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-12dp"
                    app:cardBackgroundColor="@color/gray5"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="0dp">

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/gray5"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/margin_start"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/class_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/class_date_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/class_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_toEndOf="@+id/class_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/class_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/class_time"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/class_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_toEndOf="@+id/class_time_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_9ssp" />

               <!-- <TextView
                    android:id="@+id/re_class_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_time"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/reschedule_class_date_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/re_class_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_time"
                    android:layout_marginTop="@dimen/_4sdp"
