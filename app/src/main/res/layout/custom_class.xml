-->

                <TextView
                    android:id="@+id/contracted_fees_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_time_textView"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/contracted_fees"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contracted_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_time"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_toEndOf="@+id/contracted_fees_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_9ssp" />

                <RelativeLayout
                    android:id="@+id/rlRejectedPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contracted_fees"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvRejectedByTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/inter"
                        android:paddingStart="@dimen/_8sdp"
                        android:text="@string/rejected_by"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRejectedBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toEndOf="@+id/tvRejectedByTXT"
                        android:fontFamily="@font/inter"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tvRejectedReasonTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvRejectedBy"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/inter"
                        android:paddingStart="@dimen/_8sdp"
                        android:text="@string/rejected_reason"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_9ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRejectedReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvRejectedBy"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toEndOf="@+id/tvRejectedReasonTXT"
                        android:fontFamily="@font/inter"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_9ssp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/rlRejectedPoint"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:background="@color/gray6"
                    android:src="@drawable/ic_calendar" />

                <ImageView
                    android:id="@+id/calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/receive_on_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/calendar_icon"
                    android:layout_toEndOf="@+id/calendar_icon"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/receive_on"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receive_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/calendar_icon"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_toEndOf="@+id/receive_on_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvTeacherNotAvailableTXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_on_textView"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/teacher_is_not_available"
                    android:textColor="@color/yellowish_card"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/tvTeacherUploadLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_on_textView"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/upload_homework"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUploadHWBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_gradient_background_5"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/upload_homework_text"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvViewHWBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/tvUploadHWBtn"
                        android:background="@drawable/card_gradient_background_4"
                        android:gravity="center"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/view_homework"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPendingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receive_on"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_gradient_background_5"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/pending_time_out"
                    android:textColor="@color/red_card"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receive_on"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:visibility="gone"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/accept_class_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/green_card"
                        android:fontFamily="@font/inter"
                        android:text="@string/accept"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reject_class_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/inter"
                        android:text="@string/reject"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>