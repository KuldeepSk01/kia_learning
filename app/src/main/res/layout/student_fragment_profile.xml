<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/app_theme_color"
        tools:context=".student.dashboard.ui.profile.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray6"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/light_app_theme_color"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_start"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_edit"
                android:padding="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/userImage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_marginEnd="@dimen/_16sdp"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent"
                app:tint="@color/app_theme_color" />



            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/pullToRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_below="@+id/userImage"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nested_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layout_marginBottom="@dimen/margin_start"
                        android:paddingBottom="@dimen/margin_start">

                        <View
                            android:id="@+id/middle_point"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_1sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.37"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/temp_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@color/gray5"
                            android:layout_marginBottom="-13dp"
                            android:layout_marginTop="-13dp"
                            android:layout_marginEnd="-13dp"
                            app:layout_constraintTop_toTopOf="@+id/full_name_textView"
                            app:layout_constraintBottom_toBottomOf="@+id/dob_textView"
                            app:layout_constraintEnd_toEndOf="@+id/full_name_textView"
                            app:layout_constraintStart_toStartOf="parent"
                            />


                        <TextView
                            android:id="@+id/full_name_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/full_name"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/full_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_marginStart="@dimen/margin_start"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            tools:text="@string/submit"
                            android:ellipsize="end"
                            android:maxLines="1"
                            app:layout_constraintTop_toTopOf="@+id/full_name_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />

                        <TextView
                            android:id="@+id/mobile_num_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/mobile_number"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="@+id/full_name"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/mobile_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_start"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/margin_end"
                            app:layout_constraintTop_toTopOf="@+id/mobile_num_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />

                        <TextView
                            android:id="@+id/email_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/email"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="@+id/mobile_num"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_start"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/margin_end"
                            app:layout_constraintTop_toTopOf="@+id/email_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />



                        <TextView
                            android:id="@+id/location_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/location"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="@+id/email"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_start"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/margin_end"
                            app:layout_constraintTop_toTopOf="@+id/location_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />

                        <TextView
                            android:id="@+id/gender_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/gender"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="@+id/location"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_start"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/margin_end"
                            app:layout_constraintTop_toTopOf="@+id/gender_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />

                        <TextView
                            android:id="@+id/dob_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/date_of_birth"
                            android:fontFamily="@font/inter"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:textColor="@color/gray2"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="@+id/gender"
                            app:layout_constraintEnd_toStartOf="@+id/middle_point"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/margin_start"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/middle_point"
                            android:fontFamily="@font/inter"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="@dimen/margin_end"
                            app:layout_constraintTop_toTopOf="@+id/dob_textView"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            />

                        <TextView
                            android:id="@+id/teaching_preferences_textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:text="@string/teaching_preferences"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter"
                            android:textColor="@color/dark_gray"
                            app:layout_constraintTop_toBottomOf="@+id/temp_view"
                            android:textSize="@dimen/_11ssp" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/teaching_preference_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:paddingBottom="@dimen/margin_start"
                            android:clipToPadding="false"
                            android:layout_marginTop="@dimen/_4sdp"
                            app:layout_constraintTop_toBottomOf="@+id/teaching_preferences_textView"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/task_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginStart="@dimen/margin_start"
                                android:layout_marginEnd="@dimen/margin_end"
                                android:outlineAmbientShadowColor="@color/app_theme_color1"
                                android:outlineProvider="background"
                                android:outlineSpotShadowColor="@color/app_theme_color1"
                                app:cardBackgroundColor="@color/card_background_color"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:targetApi="p">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_8sdp"
                                    >

                                    <TextView
                                        android:id="@+id/school_name_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="0dp"
                                        android:text="@string/school_name_"
                                        android:fontFamily="@font/inter"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/school_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:paddingEnd="@dimen/margin_end"
                                        android:paddingStart="@dimen/_4sdp"
                                        android:layout_toEndOf="@+id/school_name_textView"
                                        android:fontFamily="@font/inter"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_11ssp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        />

                                    <TextView
                                        android:id="@+id/country_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/school_name"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:text="@string/country_"
                                        android:fontFamily="@font/inter"
                                        android:paddingEnd="0dp"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/country"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingEnd="@dimen/margin_end"
                                        android:paddingStart="@dimen/_4sdp"
                                        android:layout_toEndOf="@+id/country_textView"
                                        android:fontFamily="@font/inter"
                                        android:layout_below="@id/school_name"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_11ssp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        />

                                    <TextView
                                        android:id="@+id/curriculum_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/country"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:fontFamily="@font/inter"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="0dp"
                                        android:text="@string/curriculum_"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/curriculum"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/inter"
                                        android:paddingEnd="@dimen/margin_end"
                                        android:paddingStart="@dimen/_4sdp"
                                        android:layout_toEndOf="@+id/curriculum_textView"
                                        android:layout_below="@id/country"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_11ssp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        />

                                    <TextView
                                        android:id="@+id/grade_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/curriculum"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="0dp"
                                        android:fontFamily="@font/inter"
                                        android:text="@string/grade"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/grade"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingEnd="@dimen/_2sdp"
                                        android:paddingStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/margin_end"
                                        android:layout_toEndOf="@+id/grade_textView"
                                        android:layout_below="@id/curriculum"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_11ssp"
                                        android:fontFamily="@font/inter"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        />


                                    <TextView
                                        android:id="@+id/subject_textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/grade"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingEnd="0dp"
                                        android:fontFamily="@font/inter"
                                        android:text="@string/subject_"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/_11ssp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/subject"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingEnd="@dimen/_2sdp"
                                        android:paddingStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/margin_end"
                                        android:layout_toEndOf="@+id/subject_textView"
                                        android:layout_below="@id/grade"
                                        android:textColor="@color/dark_gray"
                                        android:textSize="@dimen/_11ssp"
                                        android:fontFamily="@font/inter"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        />


                                    <ImageView
                                        android:id="@+id/separator"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/gray6"
                                        android:layout_below="@id/subject"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:layout_marginStart="@dimen/margin_start"
                                        android:layout_marginEnd="@dimen/margin_end"
                                        android:src="@drawable/ic_calendar"
                                        />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/logout_card"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            app:cardCornerRadius="@dimen/margin_start"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            app:layout_constraintTop_toBottomOf="@+id/teaching_preference_card"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/log_out"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_11ssp"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/link_color"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/logout"
                                    android:layout_marginEnd="@dimen/margin_end"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/app_theme_color" />

                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>




                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <include
                android:id="@+id/loader"
                layout="@layout/custom_loader"
                />



        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>