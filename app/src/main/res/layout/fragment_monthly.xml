<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray6">


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/month_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/inter"
                            android:text="Jan 2023"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_theme_color"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/next_month"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_toEndOf="@+id/month_name"
                            android:padding="@dimen/_2sdp"
                            android:rotationY="180"
                            android:src="@drawable/ic_back"
                            app:tint="@color/app_theme_color" />

                        <ImageView
                            android:id="@+id/previous_month"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_toStartOf="@+id/month_name"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:src="@drawable/ic_back"
                            app:tint="@color/app_theme_color" />


                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_start"
                        android:paddingBottom="@dimen/margin_start"
                        app:layout_constraintTop_toBottomOf="@+id/header"
                        android:clipToPadding="false"
                        android:minHeight="@dimen/_400sdp"
                        />

                    <ImageView
                        android:id="@+id/no_shift_image"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:alpha="0.7"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintVertical_bias="0.32999998" />

                    <TextView
                        android:id="@+id/no_shift_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/inter"
                        android:alpha="0.7"
                        android:text="@string/no_data_available"
                        android:visibility="gone"
                        android:textColor="@color/app_theme_color"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/no_shift_image"
                        app:layout_constraintStart_toStartOf="@+id/no_shift_image"
                        app:layout_constraintTop_toBottomOf="@+id/no_shift_image" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>