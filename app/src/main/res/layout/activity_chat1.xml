<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray6"
        tools:context=".chat.ChatActivity">

        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/app_theme_color"
            android:layout_alignParentTop="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@color/app_theme_color"
            android:layout_below="@+id/status_bar_space">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/margin_start"
                android:src="@drawable/ic_baseline_arrow_back"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chat_user_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/margin_start"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_button"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />



            <TextView
                android:id="@+id/chat_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:text="@string/title_wallet"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/margin_end"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toStartOf="@+id/video_call_button"
                app:layout_constraintStart_toEndOf="@+id/chat_user_image"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image" />

            <ImageView
                android:id="@+id/audio_call_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/margin_end"
                android:src="@drawable/ic_baseline_call"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/video_call_button"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/margin_end"
                android:src="@drawable/ic_baseline_videocam"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toStartOf="@id/audio_call_button"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/toolbar_bottom_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/theme_color_background_bottom_radius"
            android:layout_below="@+id/toolbar"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/chatNestedScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_bottom_space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chat_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/send_message_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@color/gray6"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_toStartOf="@+id/send_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginEnd="@dimen/_6sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ab"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/gray3"
                        android:visibility="gone"
                        android:padding="@dimen/_2sdp"/>

                    <EditText
                        android:id="@+id/typed_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="@dimen/_30sdp"
                        android:layout_toEndOf="@+id/ab"
                        android:hint="@string/type_a_message"
                        android:fontFamily="@font/inter"
                        android:inputType="textMultiLine"
                        android:background="@drawable/typing_edittext_background16sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"

                        />

                    <ImageView
                        android:id="@+id/attach_file"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_attach_file"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:tint="@color/gray3" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/send_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_6sdp"
                app:cardBackgroundColor="@color/app_theme_color">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_send"
                    android:layout_gravity="center"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader" />

    </RelativeLayout>

</layout>

