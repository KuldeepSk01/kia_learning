<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp"
                >


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/light_app_theme_color"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_start"
                    app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />

                <TextView
                    android:id="@+id/name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/name_"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/name_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

                <TextView
                    android:id="@+id/class_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="@string/class_date_"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/class_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/class_date_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:fontFamily="@font/inter"
                    android:layout_below="@id/name"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/class_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/class_time"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/class_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/class_time_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_below="@id/class_date"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/contracted_fees_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/class_time"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/contracted_fees"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/contracted_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/contracted_fees_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_below="@id/class_time"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <TextView
                    android:id="@+id/payment_status_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contracted_fees"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/payment_status_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/contracted_fees_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_below="@id/contracted_fees"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <TextView
                    android:id="@+id/paid_amount_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_status"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:visibility="gone"
                    android:fontFamily="@font/inter"
                    android:text="@string/paid_amount"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/paid_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/contracted_fees_textView"
                    android:layout_toStartOf="@id/userImage"
                    android:layout_below="@id/payment_status"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>