<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/margin_start">

                    <com.applandeo.materialcalendarview.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:headerColor="@color/app_theme_color"
                        app:todayLabelColor="@color/app_theme_color1" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/absent_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#FFB1B1"
                        android:layout_marginTop="@dimen/margin_start"
                        android:layout_marginStart="@dimen/margin_start"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toBottomOf="@+id/calendarView" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/margin_start"
                        android:background="@drawable/button_background_right_corner"
                        android:elevation="@dimen/_4sdp"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="@+id/absent_button"
                        app:layout_constraintStart_toStartOf="@+id/absent_button"
                        app:layout_constraintTop_toTopOf="@+id/absent_button"
                        app:layout_constraintBottom_toBottomOf="@+id/absent_button"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:fontFamily="@font/inter"
                            android:text="@string/absent"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_toStartOf="@+id/red_card_circle"
                            android:layout_alignParentStart="true"
                            />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/red_card_circle"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardBackgroundColor="#FFB1B1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_centerVertical="true"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:id="@+id/upcoming"
                                    android:text="@string/_18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_11ssp"
                                    android:textColor="@color/red"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/inter"
                                    android:textAlignment="center"
                                    android:elevation="@dimen/_4sdp"
                                    android:maxLines="1"
                                    android:maxLength="2"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/present_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#10B981"
                        android:layout_marginStart="@dimen/margin_start"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toBottomOf="@+id/absent_button"
                        />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/margin_start"
                        android:background="@drawable/button_background_right_corner"
                        android:elevation="@dimen/_4sdp"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="@+id/present_button"
                        app:layout_constraintStart_toStartOf="@+id/present_button"
                        app:layout_constraintTop_toTopOf="@+id/present_button"
                        app:layout_constraintBottom_toBottomOf="@+id/present_button"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:fontFamily="@font/inter"
                            android:text="@string/present"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_toStartOf="@+id/green_card_circle"
                            android:layout_alignParentStart="true"
                            />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/green_card_circle"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardBackgroundColor="#A9F2A4"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_centerVertical="true"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:id="@+id/green_circle_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:elevation="@dimen/_4sdp"
                                    android:fontFamily="@font/inter"
                                    android:maxLength="2"
                                    android:maxLines="1"
                                    android:text="@string/_18"
                                    android:textAlignment="center"
                                    android:textColor="#10B981"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>