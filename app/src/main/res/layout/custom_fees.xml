<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp"
                >

                <TextView
                    android:id="@+id/school_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/school_name_"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/school_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/school_name_textView"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

                <TextView
                    android:id="@+id/country_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/school_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="@string/country_"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/country_textView"
                    android:fontFamily="@font/inter"
                    android:layout_below="@id/school_name"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/curriculum_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/curriculum_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/curriculum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/curriculum_textView"
                    android:layout_below="@id/country"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/grade_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/curriculum"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/grade"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_toEndOf="@+id/grade_textView"
                    android:layout_below="@id/curriculum"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <TextView
                    android:id="@+id/subject_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grade"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/subject_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_toEndOf="@+id/subject_textView"
                    android:layout_below="@id/grade"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <TextView
                    android:id="@+id/per_hr_fees_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subject"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/per_hour_fees_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/per_hr_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_toEndOf="@+id/per_hr_fees_textView"
                    android:layout_below="@id/subject"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />



                <ImageView
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray6"
                    android:layout_below="@id/subject"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:src="@drawable/ic_calendar"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>