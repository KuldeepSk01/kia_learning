<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/chat_theme_color"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/chat_theme_color"
            app:layout_constraintTop_toBottomOf="@+id/status_bar_space">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/margin_start"
                android:src="@drawable/ic_baseline_arrow_back"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chat_user_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/margin_start"
                android:src="@drawable/ic_calendar"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/back_button"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />



            <TextView
                android:id="@+id/chat_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:text="@string/title_wallet"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/margin_end"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toStartOf="@+id/ivGroupPin"
                app:layout_constraintStart_toEndOf="@+id/chat_user_image"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                />

            <ImageView
                android:id="@+id/audio_call_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/margin_end"
                android:src="@drawable/ic_baseline_call"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/video_call_button"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/margin_end"
                android:src="@drawable/ic_baseline_videocam"
                app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"
                app:layout_constraintEnd_toStartOf="@id/audio_call_button"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"
                app:tint="@color/white" />



            <ImageView
                android:id="@+id/ivGroupPin"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:elevation="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintStart_toEndOf="@+id/chat_user_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chat_user_image"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/toolbar_bottom_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/chat_theme_color_background"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />





        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_recycle_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_bottom_space"
                app:layout_constraintBottom_toTopOf="@+id/rlMsgReplyingLayout"
                >
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/pullToRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chat_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            app:layout_constraintBottom_toTopOf="@+id/send_message_layout"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_bottom_space"
            />

<!--.............................................................-->

        <RelativeLayout

            android:visibility="gone"
            android:id="@+id/rlMsgReplyingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/send_message_layout"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvReplying"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:layout_constraintHorizontal_bias="0"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_reply"
                        />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvTXTReplying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/reply"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    app:layout_constraintStart_toEndOf="@+id/cvReplying"
                    app:layout_constraintTop_toTopOf="@+id/cvReplying"
                    app:layout_constraintBottom_toBottomOf="@+id/cvReplying"
                    android:layout_marginStart="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/background_circular_pdf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvReplying"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvReplyingCrossBtn"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_10sdp"
                        app:layout_constraintHorizontal_bias="0"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_cross" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvUserNameReplying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:text="Nini Mini"
                        android:textSize="@dimen/_10ssp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:autoLink="web"
                        android:layout_toStartOf="@+id/cvReplyingCrossBtn"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        />


                    <TextView
                        android:id="@+id/tvUserMsgReplying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:text="Hello Sir"
                        android:textSize="@dimen/_9ssp"
                        android:layout_below="@+id/tvUserNameReplying"
                        android:fontFamily="@font/inter"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/margin_start"
                        android:layout_marginEnd="@dimen/margin_end"
                        android:layout_toStartOf="@+id/cvReplyingCrossBtn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        />

                </RelativeLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/send_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_toStartOf="@+id/send_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ab"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/gray3"
                        android:visibility="gone"
                        android:padding="@dimen/_2sdp"/>

                    <EditText
                        android:id="@+id/typed_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="@dimen/_30sdp"
                        android:layout_toEndOf="@+id/ab"
                        android:hint="@string/type_a_message"
                        android:fontFamily="@font/inter"
                        android:inputType="textMultiLine"
                        android:background="@drawable/typing_edittext_background16sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"

                        />

                    <ImageView
                        android:id="@+id/attach_file"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_attach_file"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:tint="@color/gray3" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/send_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_6sdp"
                app:cardBackgroundColor="@color/chat_theme_color">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_send"
                    android:layout_gravity="center"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
