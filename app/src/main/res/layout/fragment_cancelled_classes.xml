<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray6">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <EditText
                            android:id="@+id/search_group"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:background="@drawable/button_background"
                            android:backgroundTint="@color/white"
                            android:hint="@string/search_by_subject"
                            android:fontFamily="@font/inter"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:drawablePadding="@dimen/margin_start"
                            android:drawableStart="@drawable/ic_search"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/date_picker_box"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:elevation="@dimen/_1sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="@dimen/_8sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/date_chooser_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/inter"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:textAlignment="center"
                                    android:text="@string/select_date"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_12ssp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_start"
                        android:paddingBottom="@dimen/margin_start"
                        android:layout_marginTop="@dimen/margin_start"
                        android:clipToPadding="false"
                        android:minHeight="@dimen/_400sdp"
                        app:layout_constraintTop_toBottomOf="@+id/cons_layout"
                        />

                    <ImageView
                        android:id="@+id/no_shift_image"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:alpha="0.7"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintVertical_bias="0.32999998" />

                    <TextView
                        android:id="@+id/no_shift_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/inter"
                        android:alpha="0.7"
                        android:text="@string/no_data_available"
                        android:visibility="gone"
                        android:textColor="@color/app_theme_color"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/no_shift_image"
                        app:layout_constraintStart_toStartOf="@+id/no_shift_image"
                        app:layout_constraintTop_toBottomOf="@+id/no_shift_image" />





                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>