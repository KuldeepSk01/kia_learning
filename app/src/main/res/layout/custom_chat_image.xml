<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/message_image_card"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                        <ImageView
                            android:id="@+id/message_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            />


                </androidx.cardview.widget.CardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/image_card"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_214sdp"
                    style="@style/CustomCardViewStyle"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardBackgroundColor="@color/chat_msg_bg_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="@string/title_wallet"
                                    android:textSize="@dimen/_9ssp"
                                    android:fontFamily="@font/inter"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_4sdp"
                                    android:paddingEnd="@dimen/_4sdp"
                                    android:layout_alignParentEnd="true"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    app:layout_constraintHorizontal_bias="1"
                                    />


                                <ImageView
                                    android:id="@+id/image"
                                    android:src="@drawable/logo"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:layout_below="@+id/username"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_12sdp"
                                    />
                        </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>


              <!--  <ImageView
                    android:id="@+id/delete"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/delete"
                    android:elevation="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end16"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/image_card"
                    app:tint="@color/white" />-->


                <TextView
                    android:id="@+id/my_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_4sdp"
                    android:textColor="@color/white"
                    android:text="02 May 2023 07:06 AM"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="@+id/image_card"
                    app:layout_constraintBottom_toBottomOf="@+id/image_card"
                    android:layout_marginStart="@dimen/margin_start"
                    app:layout_constraintHorizontal_bias="1"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>