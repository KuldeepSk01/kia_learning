<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_transparent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCancelImg"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/card_gradient_background_5"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/red_card"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:drawableEnd="@drawable/ic_cross"
                    android:drawablePadding="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image"
                    />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/tvDownloadImg"
                    android:background="@drawable/card_gradient_background_4"
                    android:layout_width="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:text="Download"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/gray1"
                        android:layout_gravity="center_vertical"

                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:background="@drawable/download_img"
                        android:layout_height="@dimen/_15sdp"
                        android:textColor="@color/blue_card"
                        android:layout_gravity="center_vertical"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/whiteTrans"
                    android:visibility="gone"
                    >
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:indeterminateTint="@color/app_theme_color"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>