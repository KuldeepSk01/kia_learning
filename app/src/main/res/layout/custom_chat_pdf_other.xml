<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/message_image_card"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    >
                        <ImageView
                            android:id="@+id/message_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            />


                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/message_image_card"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/background_circular_pdf"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_62sdp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/title_wallet"
                            android:textSize="@dimen/_9ssp"
                            android:fontFamily="@font/inter"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            />



                        <ImageView
                            android:id="@+id/image"
                            android:src="@drawable/ic_doc_file"
                            android:scaleType="centerCrop"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_below="@+id/username"
                            app:tint="@color/dark_gray" />

                        <TextView
                            android:id="@+id/pdf_file_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_toEndOf="@+id/image"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="@dimen/margin_start"
                            android:paddingEnd="@dimen/margin_end"
                            tools:text="sdds"
                            android:layout_below="@+id/username"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/_11ssp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/my_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray1"
                    android:text="02 May 2023 07:06 AM"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
                    app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                    android:layout_marginStart="@dimen/margin_start"
                    />

                <ImageView
                    android:id="@+id/ivDownloadingBtn"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="@+id/relativeLayout"
                    app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                    app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_download"
                    android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>