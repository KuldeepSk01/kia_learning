<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/message_image_card"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/my_reply_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                        <ImageView
                            android:id="@+id/message_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile"
                            />


                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/my_reply_layout"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    >


                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="@string/title_wallet"
                            android:textSize="@dimen/_9ssp"
                            android:fontFamily="@font/inter"
                            android:maxLines="1"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:elevation="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:layout_constraintHorizontal_bias="1"
                            />

                    <!--    <ImageView
                            android:id="@+id/delete"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/delete"
                            android:layout_marginEnd="@dimen/margin_end"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/username"
                            app:tint="@color/white" />
-->


                        <TextView
                            android:backgroundTint="@color/chat_msg_bg_color"
                            android:background="@drawable/chat_textview_my_reply_background"
                            android:id="@+id/my_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray1"
                            android:text="@string/title_wallet"
                            android:textSize="@dimen/_11ssp"
                            android:paddingEnd="@dimen/_24sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_20sdp"
                            android:fontFamily="@font/inter"
                            android:autoLink="web"
                            android:minWidth="@dimen/_125sdp"
                            android:layout_alignParentEnd="true"
                            android:textAlignment="textStart"
                            />



                        <TextView
                            android:id="@+id/my_reply_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray1"
                            android:text="02 May 2023 07:06 AM"
                            android:textSize="@dimen/_7ssp"
                            android:fontFamily="@font/inter"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingStart="0dp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:paddingEnd="0dp"
                            android:layout_alignStart="@+id/my_reply"
                            android:layout_alignBottom="@+id/my_reply"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            />

                </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>