<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layout_marginBottom="@dimen/margin_start"
                    android:paddingBottom="@dimen/margin_start">

                    <View
                        android:id="@+id/middle_point"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_1sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.37"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/gray5"
                        android:layout_marginBottom="-13dp"
                        android:layout_marginTop="-13dp"
                        android:layout_marginEnd="-13dp"
                        app:layout_constraintTop_toTopOf="@+id/full_name_textView"
                        app:layout_constraintBottom_toBottomOf="@+id/dob_textView"
                        app:layout_constraintEnd_toEndOf="@+id/full_name_textView"
                        app:layout_constraintStart_toStartOf="parent"
                        />


                    <TextView
                        android:id="@+id/full_name_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/full_name"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        android:layout_marginEnd="@dimen/margin_end"
                        android:layout_marginStart="@dimen/margin_start"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:text="@string/submit"
                        android:ellipsize="end"
                        android:maxLines="1"
                        app:layout_constraintTop_toTopOf="@+id/full_name_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />

                    <TextView
                        android:id="@+id/mobile_num_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/mobile_number"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@+id/full_name"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/mobile_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_start"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toTopOf="@+id/mobile_num_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />

                    <TextView
                        android:id="@+id/email_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/email"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@+id/mobile_num"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_start"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toTopOf="@+id/email_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />



                    <TextView
                        android:id="@+id/location_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/location"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@+id/email"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_start"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toTopOf="@+id/location_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />

                    <TextView
                        android:id="@+id/gender_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/gender"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@+id/location"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_start"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toTopOf="@+id/gender_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />

                    <TextView
                        android:id="@+id/dob_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/date_of_birth"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/margin_start"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintTop_toBottomOf="@+id/gender"
                        app:layout_constraintEnd_toStartOf="@+id/middle_point"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/margin_start"
                        android:paddingStart="@dimen/margin_start"
                        android:paddingEnd="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/middle_point"
                        android:fontFamily="@font/inter"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/margin_end"
                        app:layout_constraintTop_toTopOf="@+id/dob_textView"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        />


                    <RelativeLayout
                        android:id="@+id/aadhar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_4sdp"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/dob"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/upload_aadhar_card"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            app:cardCornerRadius="@dimen/margin_start"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"

                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/upload_aadhar_card"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_11ssp"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="+"
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/link_color"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="@dimen/margin_end"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/aadhar_card_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:padding="@dimen/_4sdp"
                            android:clipToPadding="false"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/margin_start"
                                >
                                <ImageView
                                    android:id="@+id/aadhar_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/pan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_4sdp"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/aadhar_layout"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/upload_pan_card"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            app:cardCornerRadius="@dimen/margin_start"
                            android:layout_marginTop="@dimen/margin_start"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/upload_pan_card"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="@dimen/_11ssp"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="+"
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/link_color"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="@dimen/margin_end"
                                    android:layout_marginStart="@dimen/margin_start"
                                    android:layout_centerVertical="true"
                                    />

                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/pan_card_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:padding="@dimen/_4sdp"
                            android:clipToPadding="false"
                            >
                            <androidx.cardview.widget.CardView
                                android:id="@+id/aadhar_card_cardView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/margin_start"
                                >
                                <ImageView
                                    android:id="@+id/pan_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/logout_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        app:cardCornerRadius="@dimen/margin_start"
                        android:layout_marginTop="@dimen/margin_start"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:layout_constraintTop_toBottomOf="@+id/pan_layout"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="@string/log_out"
                                android:textAlignment="center"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginStart="@dimen/margin_start"
                                android:layout_centerVertical="true"
                                />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/link_color"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="bold"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/logout"
                                android:layout_marginEnd="@dimen/margin_end"
                                android:layout_marginStart="@dimen/margin_start"
                                android:layout_centerVertical="true"
                                app:tint="@color/app_theme_color" />

                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>




                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>