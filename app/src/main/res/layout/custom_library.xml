<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp"
                >

                <TextView
                    android:id="@+id/file_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/file_name_"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/file_name_textView"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

                <TextView
                    android:id="@+id/country_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/file_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="@string/obtained_marks_"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/country_textView"
                    android:fontFamily="@font/inter"
                    android:layout_below="@id/file_name"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/curriculum_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/curriculum_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/curriculum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:paddingEnd="@dimen/margin_end"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/curriculum_textView"
                    android:layout_below="@id/country"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/grade_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/curriculum"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/grade"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_toEndOf="@+id/grade_textView"
                    android:layout_below="@id/curriculum"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <TextView
                    android:id="@+id/subject_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grade"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/subject_"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:layout_toEndOf="@+id/subject_textView"
                    android:layout_below="@id/grade"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_4sdp"
                    />


                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray6"
                    android:layout_below="@id/subject"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_end"
                    />


                <LinearLayout
                    android:id="@+id/buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_below="@id/separator">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/view_pdf_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/button_background"
                        android:text="@string/view"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter"
                        android:textSize="@dimen/_12ssp"
                        android:backgroundTint="@color/app_theme_color"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_weight="2"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/close_sheet_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@drawable/button_background"
                        android:text="@string/download_pdf"
                        android:fontFamily="@font/inter"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/app_theme_color"
                        android:layout_weight="0"
                        android:visibility="visible" />



                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>