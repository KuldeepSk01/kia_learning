<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray6"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@color/light_app_theme_color"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_start"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_edit"
                android:padding="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/userImage"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_marginEnd="@dimen/_16sdp"
                app:shapeAppearanceOverlay="@style/shapeOverlay50percent"
                app:tint="@color/app_theme_color" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userImage"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/inter"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/margin_end"
                android:text="@string/curriculum_"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/selector_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/home_selector_color"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginEnd="@dimen/margin_end"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_below="@+id/user_name"
                >

                <LinearLayout
                    android:weightSum="2"
                    android:padding="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/seprator"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/inter"
                        android:gravity="end"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_details_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Details"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/preferences_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Teaching Preference"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/inter"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_below="@+id/selector_viewPager"
                />


        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>