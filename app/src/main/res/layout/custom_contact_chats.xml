<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlCustomContactChat"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_12sdp"
        android:elevation="@dimen/_1sdp"
        android:layout_height="@dimen/_60sdp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/light_app_theme_color"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_start"
            app:shapeAppearanceOverlay="@style/shapeOverlay50percent" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/margin_end"
            android:fontFamily="@font/inter"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/margin_end"
            android:text="@string/title_wallet"
            android:layout_toStartOf="@+id/ivPin"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPin"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:shapeAppearanceOverlay="@style/shapeOverlay50percent"
            android:layout_marginEnd="@dimen/_40sdp"

            />




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/unread_background"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/green_card"
            app:shapeAppearanceOverlay="@style/shapeOverlay50percent"
            android:layout_marginEnd="@dimen/margin_end"
            />

        <TextView
            android:id="@+id/unread_messages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:maxLength="2"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/unread_background"
            android:layout_alignEnd="@+id/unread_background"/>

        <TextView
            android:id="@+id/message_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_end"
            android:fontFamily="@font/inter"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/_12ssp" />

        <!-- <TextView
             android:id="@+id/type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/profile_name"
             android:layout_marginTop="@dimen/_4sdp"
             android:layout_toEndOf="@id/profile_image"
             android:ellipsize="end"
             android:fontFamily="@font/trebuc"
             android:maxLines="1"
             android:paddingStart="@dimen/_8sdp"
             android:paddingEnd="@dimen/_45sdp"
             android:textColor="@color/dark_gray"
             android:textSize="@dimen/_12ssp" />-->
    </RelativeLayout>

</layout>