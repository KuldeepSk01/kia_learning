<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".chat.ChatListActivity">


        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/app_theme_color"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@color/app_theme_color"
            app:layout_constraintTop_toBottomOf="@+id/status_bar_space">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/app_theme_color"
                android:elevation="@dimen/_4sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:outlineAmbientShadowColor="@color/app_theme_color"
                android:outlineProvider="background"
                android:outlineSpotShadowColor="@color/app_theme_color"
                tools:targetApi="p">

                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start"
                    android:elevation="@dimen/_2sdp"
                    android:outlineAmbientShadowColor="@color/app_theme_color"
                    android:outlineProvider="background"
                    android:outlineSpotShadowColor="@color/app_theme_color"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_baseline_arrow_back"
                    app:tint="@color/white"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/headerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/_34sdp"
                    android:layout_toEndOf="@+id/backIcon"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="@string/my_chat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <EditText
            android:id="@+id/search_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/margin_end"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/gray6"
            android:hint="@string/search_group"
            android:fontFamily="@font/inter"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:drawablePadding="@dimen/margin_start"
            android:drawableStart="@drawable/ic_search"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_chats_recycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingTop="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_group" />


        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/contacts_chats_recycleView"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>