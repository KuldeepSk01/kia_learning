<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/gray5"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/margin_start"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/assigned"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/group_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/group_name"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/colun1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun1"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/test_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/test_name"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/colun2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/test_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun2"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/test_type_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/test_type"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colun3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/test_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun3"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp" />


                <TextView
                    android:id="@+id/date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_type"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/date"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colun4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_type"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_type"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun4"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/sub_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="@string/submission_date"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/colun5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/sub_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun5"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp" />


                <TextView
                    android:id="@+id/test_file_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/test_file"
                    android:layout_alignBottom="@+id/test_file"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/test_file"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/colun6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/test_file"
                    android:layout_alignBottom="@+id/test_file"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/test_file"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@id/sub_date"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/margin_end16"
                    android:layout_toEndOf="@+id/colun6"
                    android:background="@drawable/editrext_background_circular2"
                    android:drawablePadding="@dimen/margin_start"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:padding="@dimen/_6sdp"
                    android:paddingStart="@dimen/margin_start"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/we_neur_services_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    app:drawableStartCompat="@drawable/ic_doc_file" />


                <TextView
                    android:id="@+id/completed_file_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/completed_file"
                    android:layout_alignBottom="@+id/completed_file"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/completed_file"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/colun7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/completed_file"
                    android:layout_alignBottom="@+id/completed_file"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/completed_file"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@id/test_file"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/margin_end16"
                    android:layout_toEndOf="@+id/colun7"
                    android:background="@drawable/editrext_background_circular2"
                    android:drawablePadding="@dimen/margin_start"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:padding="@dimen/_6sdp"
                    android:paddingStart="@dimen/margin_start"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/we_neur_services_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o_ed_to_verify_that_you_are_eligible_to_receive_o"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    app:drawableStartCompat="@drawable/ic_doc_file" />


                <TextView
                    android:id="@+id/obtained_marks_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_file"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/obtained_marks"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/colun8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_file"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/obtained_marks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_file"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_toEndOf="@+id/colun8"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp" />


                <ImageView
                    android:id="@+id/edit_score"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_edit"
                    android:elevation="@dimen/_4sdp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_end16"
                    android:layout_below="@id/test_file"
                    android:layout_marginTop="@dimen/_45sdp"
                    app:tint="@color/app_theme_color" />



                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/obtained_marks"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:background="@color/gray4"
                    />


                <TextView
                    android:id="@+id/total_marks_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/total_marks"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/colun9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/sub_date_textView"
                    android:fontFamily="@font/inter"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/margin_end"
                    android:text="@string/colun"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/total_marks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/separator"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/colun9"
                    android:fontFamily="@font/inter"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_end"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp" />



            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>