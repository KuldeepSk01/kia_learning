<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray6">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/margin_start"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:weightSum="3"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="@dimen/margin_start"
                            android:layout_marginEnd="@dimen/margin_end"
                            >


                            <EditText
                                android:id="@+id/from"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginEnd="@dimen/margin_end"
                                android:background="@drawable/button_background"
                                android:backgroundTint="@color/white"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:hint="@string/from"
                                android:focusable="false"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <EditText
                                android:id="@+id/to"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginEnd="@dimen/margin_end"
                                android:background="@drawable/button_background"
                                android:backgroundTint="@color/white"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:hint="@string/to"
                                android:focusable="false"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/submit_button"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@drawable/button_background"
                                android:backgroundTint="@color/app_theme_color"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/inter"
                                android:text="@string/submit"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>


                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_start"
                        android:paddingBottom="@dimen/margin_start"
                        app:layout_constraintTop_toBottomOf="@+id/header"
                        android:clipToPadding="false"
                        android:minHeight="@dimen/_400sdp"
                        />

                    <ImageView
                        android:id="@+id/no_shift_image"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:alpha="0.7"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintVertical_bias="0.32999998" />

                    <TextView
                        android:id="@+id/no_shift_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/inter"
                        android:alpha="0.7"
                        android:text="@string/no_data_available"
                        android:visibility="gone"
                        android:textColor="@color/app_theme_color"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/no_shift_image"
                        app:layout_constraintStart_toStartOf="@+id/no_shift_image"
                        app:layout_constraintTop_toBottomOf="@+id/no_shift_image" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <include
            android:id="@+id/loader"
            layout="@layout/custom_loader"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>