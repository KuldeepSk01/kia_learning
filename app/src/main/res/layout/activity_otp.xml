<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".auth.OTPActivity">



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/status_bar_size"
            android:id="@+id/nested_scrollView"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:src="@drawable/otp_ver"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_170sdp"
                    android:src="@drawable/verification_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/verify_email_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_start"
                    android:text="@string/verify_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />


                <TextView
                    android:id="@+id/verify_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    android:text="@string/enter_the_otp_code_we_sent_to_your_mobile"
                    android:layout_marginStart="@dimen/margin_start"
                    android:layout_marginEnd="@dimen/margin_end"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/verify_email_textview" />


                <LinearLayout
                    android:id="@+id/otp_layout"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:weightSum="6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/verify_mobile">

                    <EditText
                        android:id="@+id/otp_number_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/dark_gray"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/otp_number_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/dark_gray"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/otp_number_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/dark_gray"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/otp_number_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/dark_gray"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/otp_number_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/dark_gray"
                        android:maxLength="1"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/otp_number_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/editrext_background_circular"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/dark_gray"
                        android:maxLength="1"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/resend_code_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_code"
                    android:textColor="@color/link_color"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_24sdp"
                    app:layout_constraintEnd_toEndOf="@+id/otp_layout"
                    app:layout_constraintStart_toStartOf="@+id/otp_layout"
                    app:layout_constraintTop_toBottomOf="@id/otp_layout" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/resend_code_button"
                    app:layout_constraintStart_toStartOf="@id/resend_code_button"
                    app:layout_constraintTop_toBottomOf="@id/resend_code_button" />

                <TextView
                    android:id="@+id/change_mobile_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_mobile_number"
                    android:textColor="@color/link_color"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="@+id/otp_layout"
                    app:layout_constraintStart_toStartOf="@+id/otp_layout"
                    app:layout_constraintTop_toBottomOf="@id/resend_code_button" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/change_mobile_button"
                    app:layout_constraintStart_toStartOf="@id/change_mobile_button"
                    app:layout_constraintTop_toBottomOf="@id/change_mobile_button" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/verify_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/button_background"
                    android:text="@string/verify"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:paddingStart="@dimen/_32sdp"
                    android:paddingEnd="@dimen/_32sdp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/margin_start"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/change_mobile_button"
                    />

                <include
                    android:id="@+id/loader"
                    layout="@layout/custom_loader"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>