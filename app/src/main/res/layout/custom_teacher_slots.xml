<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/absent_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/button_background"
            android:backgroundTint="#FFB1B1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:background="@drawable/button_background_right_corner"
            android:elevation="@dimen/_4sdp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="@+id/absent_button"
            app:layout_constraintStart_toStartOf="@+id/absent_button"
            app:layout_constraintTop_toTopOf="@+id/absent_button"
            app:layout_constraintBottom_toBottomOf="@+id/absent_button"
            >

            <TextView
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/inter"
                android:text="@string/absent"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginEnd="@dimen/margin_end"
                android:layout_toStartOf="@+id/red_card_circle"
                android:layout_alignParentStart="true"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/red_card_circle"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardBackgroundColor="#FFB1B1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_end"
                android:layout_centerVertical="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="@dimen/_4sdp"
                        android:fontFamily="@font/inter"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:text="X"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>