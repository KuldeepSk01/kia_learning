<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingBottom="@dimen/margin_start"
        android:clipToPadding="false"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/task_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:outlineAmbientShadowColor="@color/app_theme_color1"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/app_theme_color1"
            app:cardBackgroundColor="@color/card_background_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_8sdp"
                >

                <View
                    android:id="@+id/middle"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerHorizontal="true"
                    />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/rajesh_kumar"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/check_in_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/check_in_"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@+id/name"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/check_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignTop="@+id/check_in_textView"
                    android:layout_toEndOf="@+id/check_in_textView"
                    android:layout_toStartOf="@id/middle"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />
                <TextView
                    android:id="@+id/check_in_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@+id/check_in"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/middle"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />
                <TextView
                    android:id="@+id/check_in_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@+id/check_in_date"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/middle"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />


                <TextView
                    android:id="@+id/check_out_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="0dp"
                    android:text="@string/check_out"
                    android:fontFamily="@font/inter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/middle"
                    android:layout_below="@+id/name"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/check_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/check_in_textView"
                    android:layout_toEndOf="@+id/check_out_textView"
                    android:layout_toStartOf="@id/middle"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />

                <TextView
                    android:id="@+id/check_out_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/middle"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/check_in"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />


                <TextView
                    android:id="@+id/check_out_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/middle"
                    android:layout_below="@+id/check_out_date"
                    android:fontFamily="@font/inter"
                    android:text="@string/submit"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_11ssp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
